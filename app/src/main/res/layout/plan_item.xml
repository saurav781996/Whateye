<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/weekly_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/planName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEEKLY PREMIUM"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/planAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/planDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10dp">

            </TextView>

            <TextView
                android:id="@+id/planFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="16dp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp">

                <Button
                    android:id="@+id/getPlan"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Get Plan"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white">

                </Button>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

            <RelativeLayout
                android:id="@+id/bestvalue"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="26dp"
                android:background="@drawable/best_value_shape"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:text="BEST VALUE">

                </TextView>

            </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>